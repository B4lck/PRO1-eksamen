<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="400.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.SelectCustomerController">
    <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="400.0" spacing="190.0">
        <padding>
            <Insets left="20.0"/>
        </padding>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Vælg Kunde">
            <font>
                <Font size="18.0"/>
            </font>
        </Text>
        <Button mnemonicParsing="false" text="Søg og filtrer"/>
    </HBox>
    <TableView fx:id="customerTable" layoutY="50.0" prefHeight="300.0" prefWidth="400.0">
      <columns>
          <TableColumn fx:id="nameColumn" prefWidth="120.0" text="Navn"/>
          <TableColumn fx:id="emailColumn" prefWidth="180.0" text="Email"/>
          <TableColumn fx:id="phoneColumn" prefWidth="100.0" text="Tlf"/>
      </columns>
    </TableView>
    <HBox alignment="CENTER" layoutY="350.0" prefHeight="50.0" prefWidth="400.0" spacing="130.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Button mnemonicParsing="false" onAction="#back" prefWidth="70.0" text="Tilbage"/>
        <Button mnemonicParsing="false" onAction="#confirm" prefWidth="70.0" text="Vælg"/>
    </HBox>
</AnchorPane>
